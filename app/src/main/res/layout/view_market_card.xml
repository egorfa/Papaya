<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/market_card"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="3dp"
    android:layout_margin="4dp"
    android:background="@color/white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="?android:attr/selectableItemBackground"
        android:padding="@dimen/default_padding">

        <ImageView
            android:layout_width="@dimen/user_pic_size"
            android:layout_height="@dimen/user_pic_size"
            android:id="@+id/book_image"
            android:cropToPadding="false"
            android:scaleType="fitCenter"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_market"
            android:layout_gravity="center_vertical"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="4dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_marginLeft="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/book_name"
                android:layout_alignTop="@id/book_image"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/book_image"
                android:layout_toEndOf="@+id/book_image"
                android:textSize="@dimen/text_size_large"
                android:layout_below="@+id/book_image"
                android:textColor="@color/secondary_text"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/author"
                android:textSize="@dimen/text_size_medium"
                android:layout_below="@+id/book_name"
                android:layout_alignLeft="@+id/book_name"
                android:textColor="@color/secondary_text"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/price"
            android:layout_gravity="center_vertical"
            android:padding="16dp"
            android:textSize="@dimen/text_size_large"
            android:textColor="@color/primary_text"/>

    </LinearLayout>
</android.support.v7.widget.CardView>